@model HavaDurumuApp.Models.Sehir

@{
    ViewData["Baslik"] = "Sehir"; 
}
<div class="container">
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <h2>Girdiğiniz şehir için tahmini hava durumu</h2>
            <label asp-for=" Adi"></label>
            <span class="badge alert-primary">@Model.Adi</span> <br />

            <label asp-for=" Sicaklik"></label>
            <span class="badge alert-primary">@Model.Sicaklik °</span> <br />

             <label asp-for=" Nem"></label>
            <span class="badge alert-primary">@Model.Nem</span> <br />

             <label asp-for=" Basinc"></label>
            <span class="badge alert-primary">@Model.Basinc Hpa</span> <br />

             <label asp-for=" Ruzgar"></label>
            <span class="badge alert-primary">@Model.Ruzgar</span> <br />

             <label asp-for=" HavaDurumu"></label>
            <span class="badge alert-primary">@Model.HavaDurumu</span> <br />

            <form method="get">
                <button asp-controller="HavaDurumu" asp-action="SehirAra" class="btn btn-primary" >Geri</button>
            </form>

        </div>
    </div>
</div>
